@using Codelife.Data;
@model List<Post>

@{
    ViewBag.Title = "Codelife - Welcome";
}


<div class="container">
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4">Welcome To Codelife</h1>
            <p class="lead my-3">Start Your Journey with us , as your share your inner ideas and bring dreams to life with words</p>
        </div>
    </div>

</div>

<main role="main" class="container">
    <div class="row">
        <div class="col-md-8 blog-main">
            <h3 class="pb-3 mb-4 text-theme border-bottom">
                All Posts
            </h3>

            <div class="blog-post">
                @if (Model.Count() > 0)
                {
                    foreach (Post post in Model)
                    {

                        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                            <div class="card-body d-flex flex-column align-items-start">
                                <strong class="d-inline-block mb-2 text-success">@post.tag</strong>
                                <h3 class="mb-0">
                                    <a class="text-dark" href="@Url.Action("ArticleById" , "Article" , new { articleId = post.postId})">@post.title</a>
                                </h3>
                                <div class="mb-1 text-muted">@post.createDate</div>
                                <p class="card-text mb-auto"></p>
                                <a href="@Url.Action("ArticleById" , "Article" , new { articleId = post.postId})">Continue reading</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <strong class="d-inline-block mb-2 text-theme">Admin</strong>
                            <h3 class="mb-0">
                                <a class="text-dark" href="#">No Post Yet</a>
                            </h3>
                            <div class="mb-1 text-muted"></div>
                            <p class="card-text mb-auto">Gain the honour of creating our very first post </p>
                            <a href="@Url.Action("Register" , "Account")">Register</a>
                        </div>
                    </div>
                }

            </div><!-- /.blog-post -->
            <!--

                <nav class="blog-pagination mb-4">
                    <a class="btn btn-outline-primary" href="#">Older</a>
                    <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
                </nav>

            -->
        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
            <div class="p-3 mb-3 bg-light rounded">
                <h4 class="text-theme">About</h4>
                <p class="mb-0">Start Your Journey with us here at Codelife. Bring out your inner colossus</p>
            </div>

