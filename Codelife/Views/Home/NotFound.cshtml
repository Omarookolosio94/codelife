
@{
    ViewBag.Title = "NotFound";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="jumbotron p-3 p-md-5 bg-white">
        <div class="col-md-6 px-0">
            <h1 class="display-4">Page Not Found</h1>
            <p class="lead my-3">The page you are looking for does not exist or might have been removed.</p>

            <a href="@Url.Action("Index" , "Home")" class="btn btn-outline-primary my-3 btn-link">
                Back To Home
            </a>

        </div>
    </div>
</div>
