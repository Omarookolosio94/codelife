    <script src="~/Content/js/HelpersJs.js"></script>
    <script>
        if ($('.parallax').length > 0) {
            var scene = $('.parallax').get(0);
            var parallax = new Parallax(scene, {
                relativeInput: true,
            });
        }
    </script>
</body>
</html>
