<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.1/assets/img/favicons/favicon.ico">

    <title>Codelife</title>

    <link href="~/Content/css/i-con.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
    <link href="~/Content/css/Site.css" rel="stylesheet" />
</head>

<body>

    <div id="navigation" class="container bg-theme">
        <header class="bg-theme py-4 px-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <a class="logo text-white" href="@Url.Action("Index", "Home")">
                        <i class="i-con i-con-home text-white"></i>
                        <span class="text-white">CodeLife</span>
                    </a>
                </div>

                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a href="" class="mr-3">
                        <i class="i-con i-con-search text-white"></i>
                    </a>
                    <a class="mr-3" href="@Url.Action("Login" , "Account")">
                        <i class="i-con i-con-user text-white"></i>
                        <span class="text-white">Login</span>
                    </a>
                    <a class="btn btn-white" href="@Url.Action("Register" , "Account")">Register</a>

                </div>

                <!--
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a href="" class="mr-3">
                        <i class="i-con i-con-user text-white"></i>
                       <span class="text-white">Profile</span>
                    </a>
                    <a href="" class="">
                        <i class="i-con i-con-lock text-white"></i>
                        <span class="text-white">Log Out</span>
                    </a>
                </div>
                -->
            </div>
        </header>
    </div>

    <div class="content-box">
        @RenderBody()
    </div>

    <footer class="container py-4 bg-theme">
        <p class="text-center p-0 m-0">
            <small class="text-white text-center">&copy; Copyright @DateTime.Now.Year , Matrix Web</small>
        </p>
    </footer>

    <!--MESSAGE MODAL-->
    <!-- Modal -->
    <div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle"><label id="Modaltitle">Notification</label></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modelMessage">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    ================================================== -->

    <script src="~/Content/js/jquery-3.0.0.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/HelpersJs.js"></script>

</body>
</html>