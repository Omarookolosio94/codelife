    <nav class="navbar navbar-icon-top navbar-expand-lg py-3">
        <div class="container">
            <a class="navbar-brand text-theme" href="@Url.Action("Index" , "Home")">Codelife</a>
            <button class="navbar-toggler btn btn-theme text-white" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars text-white"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">

                    <li>
                        <a class="mr-3" href="@Url.Action("About" , "Home")">
                            <span class="btn btn-white">About</span>
                        </a>
                    </li>
                    @if (isUser)
                    {
                        <li class="nav-item">
                            <a class="mr-3" href="@Url.Action("Authors" , "Profile")">
                                <span class="btn btn-white">Authors</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("AuthorProfile" , "Profile" , new {  authorId = Int32.Parse(AuthorId)})" class="mr-3">
                                <span class="btn btn-white">Profile</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Logout" , "Account")" class="mr-3">
                                <span class="btn btn-white">Log Out</span>
                            </a>

                        </li>
                        <li>
                            <a href="@Url.Action("PostArticle" , "Article")">
                                <span class="btn btn-theme">Post Article</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="mr-3" href="@Url.Action("Authors" , "Profile")">
                                <span class="btn btn-white">Authors</span>
                            </a>
                        </li>
                        <li>
                            <a class="mr-3" href="@Url.Action("Login" , "Account")">
                                <span class="btn btn-white">Login</span>
                            </a>
                        </li>
                        <li>
                            <a class="btn btn-theme" href="@Url.Action("Register" , "Account")">Register</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="content-box">
        @RenderBody()
    </div>

    <footer class="container py-4 bg-blue rounded shadow text-center">
        <a href="https://okolosioport.herokuapp.com" target="_blank" rel="noopener noreferrer" class="text-center text-sm text-white p-0 m-0">
            &copy; Copyright @DateTime.Now.Year , Matrix Web
        </a>
    </footer>

    <!--MESSAGE MODAL-->
    <!-- Modal -->
    <div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle"><label id="Modaltitle">Notification</label></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modelMessage">
                    Body
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div id="alertFail" class="alert alert-danger alert-dismissible fade py-3 d-none" role="alert">
        <p id="failMessage"></p>
        <button type="button" class="close" aria-label="Close" onclick="return CloseAlertFail()">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div id="alertSuccess" class="alert alert-success alert-dismissible fade py-3 d-none" role="alert">
        <p id="successMessage"></p>
        <button type="button" class="close" aria-label="Close" onclick="return CloseAlertSuccess()">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>


    <div id="alertRedirect" class="alert alert-success alert-dismissible fade d-none" role="alert">
        <h4 class="alert-heading">Well done!</h4>
        <button type="button" class="close" aria-label="Close" onclick="return CloseAlertRedirect()">
            <span aria-hidden="true">&times;</span>
        </button>
        <p id="redirectSuccessMessage"></p>
        <hr>
        <p id="redirectMessage" class="mb-0"></p>
    </div>


    <div class="loader">
        <div class="loader-head d-none" id="loader">
            <div class="first-indicator" />
            <div class="second-indicator" />
        </div>
    </div>
